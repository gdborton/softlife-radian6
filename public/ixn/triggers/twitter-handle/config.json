                "defaultValue": ""
            },
            {
                "name": "twitterHandle",
                "dataType": "text",
                "maxLength": "100",
                "isNullable": false,
                "defaultValue": ""
            },
            {
                "name": "twitterFollowers",
                "dataType": "number",
                "maxlength": "100",
                "isNullable": false,
                "defaultValue": 0
            }
        ],
        "sendableCustomObjectField": "primaryEmailAddress",
        "sendableSubscriberField": "_SubscriberKey"
    },
    "edit": {
        "uri": "index.html",
        "maxHeight": 500,
        "maxWidth": 750,
        "minHeight": 300,
        "minWidth": 450,
        "steps": 1
    }
}
